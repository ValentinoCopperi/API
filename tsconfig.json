{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true
    },
    "include": ["src/**/*.ts", "src/types/**/*.d.ts"]
  }
  